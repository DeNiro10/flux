{
  "name": "financas-local",
  "version": "1.0.0",
  "description": "Gerenciador Financeiro Pessoal Local-First com integração Pluggy",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "npx concurrently \"npm run dev:server\" \"npm run dev:vite\" \"npm run dev:browser\"",
    "dev:docker": "npx concurrently \"npm run dev:server\" \"npm run dev:vite\"",
    "start": "npm run dev",
    "dev:server": "node server.js",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "dev:browser": "wait-on http://localhost:5173 && open http://localhost:5173 && tail -f /dev/null",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "rebuild": "@electron/rebuild -f -w better-sqlite3",
    "rebuild:node": "npm rebuild better-sqlite3",
    "test:server": "node test-server.js",
    "check": "node check-server.js",
    "docker:start": "./docker-start.sh",
    "docker:stop": "./docker-stop.sh",
    "docker:build": "docker compose build || docker-compose build",
    "docker:up": "docker compose up || docker-compose up",
    "docker:down": "docker compose down || docker-compose down",
    "postinstall": "npm rebuild better-sqlite3 || true",
    "postinstall:electron": "@electron/rebuild -f -w better-sqlite3"
  },
  "keywords": [
    "electron",
    "react",
    "finance",
    "local-first"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "buffer": "^6.0.3",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "luxon": "^3.4.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.12.0",
    "tailwind-merge": "^2.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "@electron/rebuild": "^3.6.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "vite": "^5.4.0",
    "wait-on": "^7.2.0"
  }
}
